<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :氏名 %>
    <%= form.text_field :name, id: :user_name %>
  </div>

  <div class="field">
    <%= form.label :メールアドレス %>
    <%= form.text_field :email_address, id: :user_email_address %>
  </div>

  <div class="field">
    <%= form.label :パスワード %>
    <%= form.text_field :password, id: :user_password_digest %>
  </div>

  <div class="field">
    <%= form.label :パスワード確認 %>
    <%= form.text_field :password_confirmation, id: :user_password_confirmation %>
  </div>

  <div class="field">
    <%= form.label :icon %>
    <%= form.file_field :icon, id: :user_icon %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
